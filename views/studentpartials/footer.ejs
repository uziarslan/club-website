<script>
  document.addEventListener('DOMContentLoaded', function() {
    const form = document.querySelector('form'); // Update with your form selector
    const loadingOverlay = document.querySelector('.loading-overlay');

    form.addEventListener('submit', function() {
      const usernameExists = form.getAttribute('data-username-exists');
      if (usernameExists === 'true') {
        event.preventDefault();
        loadingOverlay.style.display = 'none'; // Hide the loading overlay
      } else {
        loadingOverlay.style.display = 'flex'; // Show the loading overlay
      }
    });

    // Add this function where you handle the form submission response
    function handleFormResponse() {
      loadingOverlay.style.display = 'none';
      // Additional logic or redirection after form submission response
    }
  });

</script>
