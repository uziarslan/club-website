<%- include('../adminpartials/loginhead', {title: "Team Admin || Signup"}) %>
<div class="container-scroller">
  <div class="container-fluid">
    <div class="row">
      <div class="content-wrapper full-page-wrapper d-flex align-items-center auth-pages">
        <div class="card col-lg-4 mx-auto">
          <div class="card-body px-5 py-5">
            <h3 class="card-title text-left mb-3">Register as Team Admin</h3>
            <form action="/coach/register" method="POST">
              <div class="form-group">
                <label id="name" class="form-text text-muted">
                  Name
                </label>
                <input type="text" class="form-control" name="fullname" id="name" required>
              </div>
              <div class="form-group">
                <label id="email" class="form-text text-muted">
                  Email
                </label>
                <input type="email" class="form-control" name="username" id="email" required>
              </div>
              <div class="form-group">
                <label id="saudiNumberHelp" class="form-text text-muted">
                  Password
                </label>
                <input type="password" class="form-control" name="password" id="password" required>
              </div>
              <div class="form-group">
                <label id="phone" class="form-text text-muted">
                  Phone
                </label>
                <input type="tel" class="form-control" name="phone" id="phone" required>
              </div>
              <div class="form-group">
                <label class="form-text text-muted">
                  Select Team
                </label>
                <select name="team" class="form-control" id="coach" required>
                  <% for (let team of teams){ %>
                  <option value="<%= team._id %>"><%= team.name %></option>
                  <% } %>
                </select>
              </div>
              <div class="text-center">
                <button type="submit" name="submit" class="btn btn-primary btn-block enter-btn">Signup</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include('../adminpartials/loginfooter') %>
