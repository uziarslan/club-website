<%- include('../studentpartials/head') %>
<div class="content-wrapper">
  <div class="row">
    <div class="col-xl-3 col-lg-3 col-md-3 col-sm-6 mb-4">
      <div class="card">
        <div class="card-body">
          <div class="clearfix">
            <img class="float-right" style="width: 100px;" src="<%= team.image.path %>" alt="">
          </div>
          <h6 class="card-subtitle mb-4"><%= team.name %></h6>
          <!-- <h4 class="card-title font-weight-normal text-success">800</h4> -->
          <!-- <div class="progress progress-slim">
            <div class="progress-bar bg-success-gadient" role="progressbar" style="width: 75%" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
          </div> -->
        </div>
      </div>
    </div>
  </div>
  <div class="row mb-2">
    <div class="col-lg-12">
      <div class="card">
        <div class="card-body">
          <div class="table-responsive">
            <table class="table center-aligned-table" id="transactionTable">
              <thead>
                <tr class="text-primary">
                  <th>Name</th>
                  <th>Coach</th>
                  <th>Email</th>
                  <th>Jersey #</th>
                  <th>Role</th>
                </tr>
              </thead>
              <tbody>
                <% for (let st of team.students){ %>
                <tr class="">
                  <td><%= st.fullname %></td>
                  <td><%= student.coach.fullname %></td>
                  <td><%= st.username %></td>
                  <td><%= st.jersey %></td>
                  <td><%= st.role %></td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include('../studentpartials/footer') %>
