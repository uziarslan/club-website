<%- include('../adminpartials/loginhead', {title: "Student || Edit"}) %>
<div class="container-scroller">
  <div class="container-fluid">
    <div class="row">
      <div class="content-wrapper full-page-wrapper d-flex align-items-center auth-pages">
        <div class="card col-lg-7 mx-auto">
          <div class="card-body px-5 py-5">
            <%- include('../flash') %>
            <h3 class="card-title text-left mb-3">Register as Student (<%= team.name %>)</h3>
            <form action="/student/register/<%= team._id %>/<%=student._id%>?_method=PUT" method="POST" enctype="multipart/form-data">
              <div class="row">
                <div class="col-6">
                  <div class="row">
                    <div class="col-6">
                      <div class="form-group">
                        <label class="form-text text-muted">
                          Select Coach
                        </label>
                        <select name="coach" class="form-control" id="coach" required>
                          <% if (team.coaches.length){ %>
                          <option selected value="<%= student.coach._id %>"><%= student.coach.fullname %></option>
                          <% for (let coach of team.coaches){ %>
                          <% if (student.coach.fullname !== coach.fullname){ %>
                          <option value="<%= coach._id %>"><%= coach.fullname %></option>
                          <% } %>
                          <% } %>
                          <% }else{ %>
                          <option value="none">No Coach Yet</option>
                          <% } %>
                        </select>
                      </div>
                    </div>
                    <div class="col-6">
                      <div class="form-group">
                        <label class="form-text text-muted">
                          Select Option
                        </label>
                        <select name="role" class="form-control" id="coach" required>
                          <option value="football">Football</option>
                          <option value="cheer">Cheer</option>
                        </select>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="col-6">
                  <div class="form-group">
                    <label class="form-text text-muted">
                      ASSOCIATION NAME
                    </label>
                    <input value="<%= student.association %>" type="text" class="form-control p_input" name="association" required>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-12">
                  <div class="form-group">
                    <label class="form-text text-muted">
                      Email
                    </label>
                    <input value="<%= student.username %>" type="text" class="form-control p_input" name="username">
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-6">
                  <div class="form-group">
                    <label class="form-text text-muted">
                      Division of play
                    </label>
                    <select name="dop" class="form-control" id="coach" required>
                      <option selected value="<%= student.dop %>"><%= student.dop %></option>
                      <% for (let d of dop){ %>
                      <% if (student.dop !== d){ %>
                      <option value="<%= d %>"><%= d %></option>
                      <% } %>
                      <% } %>
                    </select>
                  </div>
                </div>
                <div class="col-6">
                  <div class="form-group">
                    <label class="form-text text-muted">
                      Participantâ€™s Full Name
                    </label>
                    <input required value="<%= student.fullname %>" type="text" class="form-control p_input" name="fullname">
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-4">
                  <div class="form-group">
                    <label id="Jersey" class="form-text text-muted">
                      Jersey #
                    </label>
                    <input value="<%= student.jersey %>" type="number" class="form-control" id="Jersey" name="jersey" required>
                  </div>
                </div>
                <div class="col-4">
                  <div class="form-group">
                    <label id="age" class="form-text text-muted">
                      Age (as of 7/31)
                    </label>
                    <input value="<%= student.age %>" type="number" class="form-control" id="age" name="age" required>
                  </div>
                </div>
                <div class="col-4">
                  <div class="form-group">
                    <label id="dob" class="form-text text-muted">
                      Date of Birth (MM/DD/YYYY)
                    </label>
                    <input value="<%= student.dob %>" type="date" class="form-control" id="dob" name="dob" required>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-6">
                  <div class="form-group">
                    <label class="form-text text-muted">
                      Parent/Guardian Name(s)
                    </label>
                    <input required value="<%= student.parent %>" type="text" class="form-control p_input" name="parent">
                  </div>
                </div>
                <div class="col-6">
                  <div class="form-group">
                    <label class="form-text text-muted">
                      Phone Number
                    </label>
                    <input value="<%= student.phone %>" required type="tel" class="form-control p_input" name="phone">
                  </div>
                </div>
              </div>
              <div class="form-group">
                <label class="form-text text-muted">
                  Complete address (including City, State, and Zip Code)
                </label>
                <input required value="<%= student.address %>" type="text" class="form-control p_input" name="address">
              </div>
              <div class="row mb-4">
                <div class="col-6 mx-auto">
                  <div class="panel">
                    <div class="button_outer">
                      <div class="btn_upload">
                        <input accept=".jpeg, .jpg, .png" type="file" id="upload_file" name="image">
                        Upload Image <i class="ms-1 fa fa-upload"></i>
                      </div>
                      <div class="processing_bar"></div>
                      <div class="success_box"></div>
                    </div>
                  </div>
                  <div class="error_msg"></div>
                  <div class="uploaded_file_view" id="uploaded_view">
                    <span class="file_remove">X</span>
                  </div>
                </div>
              </div>
              <div class="text-center">
                <button type="submit" class="btn btn-primary btn-block enter-btn">Save Changes</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include('../studentpartials/footer') %>
