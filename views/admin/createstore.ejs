<%- include('../adminpartials/head', {title: "Admin || Teams"}) %>
<div class="loading-overlay">
  <div class="loading-spinner"></div>
</div>
<div class="content-wrapper">
  <%- include('../flash') %>
  <div class="container-scroller">
    <div class="container-fluid">
      <div class="row">
        <div class="content-wrapper full-page-wrapper auth-pages">
          <div class="card col-lg-7 mx-auto">
            <div class="card-body px-5 py-5">
              <h3 class="card-title text-left mb-3">Create a Product for <%= team.name %></h3>
              <form action="/team/<%= team._id %>" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                  <label class="form-text text-muted">
                    Product Title
                  </label>
                  <input required type="text" class="form-control p_input" name="productName">
                </div>
                <div class="form-group">
                  <label class="form-text text-muted">
                    Product Price
                  </label>
                  <input required type="number" class="form-control p_input" name="productPrice">
                </div>
                <div class="row mb-4">
                  <div class="col-6 mx-auto">
                    <div class="panel1">
                      <div class="button_outer1">
                        <div class="btn_upload1">
                          <input multiple type="file" id="upload_file1" required accept=".jpg, .jpeg, .png" id="upload_background" name="productImages">
                          Product Images <i class="ms-1 fa fa-upload"></i>
                        </div>
                        <div class="processing_bar1"></div>
                        <div class="success_box1"></div>
                      </div>
                    </div>
                    <div class="error_msg1"></div>
                    <div class="uploaded_file_view1" id="uploaded_view1">
                      <span class="file_remove1">X</span>
                    </div>
                  </div>
                </div>
                <div class="text-center">
                  <button type="submit" class="btn btn-primary btn-block enter-btn">Create</button>
                </div>
              </form>
            </div>
          </div>

          <div class="row p-5 bg-white mt-4">
            <div class="col-3">
              <div class="card">
                <a href="#">
                  <img class="card-img-top" src="#" width="100%" height="auto" alt="Card image cap">
                </a>
                <div class="card-body">
                  <h5 class="card-title text-center mb-4">dqwdqw</h5>
                  <div class="row">
                    <div style="width: 50%; text-align: center;">
                      <a href="#" class="btn btn-primary" style="width: 90%;"><i class="fa fa-edit" style="font-size: 20px;"></i></a>
                    </div>
                  </div>
                </div>
              </div>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include('../adminpartials/footer') %>
