<%- include('../adminpartials/head', {title: "Admin || Teams"}) %>
<div class="loading-overlay">
  <div class="loading-spinner"></div>
</div>
<div class="content-wrapper">
  <%- include('../flash') %>
  <div class="container-scroller">
    <div class="container-fluid">
      <div class="row">
        <div class="content-wrapper full-page-wrapper auth-pages">
          <div class="card col-lg-7 mx-auto">
            <div class="card-body px-5 py-5">
              <h3 class="card-title text-left mb-3">Create a team</h3>
              <form action="/admin/teams" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                  <label class="form-text text-muted">
                    Team name
                  </label>
                  <input required type="text" class="form-control p_input" name="name">
                </div>
                <div class="form-group">
                  <div class="panel3 mx-auto">
                    <div class="button_outer3">
                      <div class="btn_upload3">
                        <input type="file" id="upload_file3" accept="audio/mpeg, audio/mp3" name="audio">
                        Audio <i class="ms-1 fa fa-upload"></i>
                      </div>
                      <div class="processing_bar3"></div>
                      <div class="success_box3"></div>
                    </div>
                  </div>
                  <div class="error_msg3"></div>
                  <div class="uploaded_file_view3" id="uploaded_view3">
                    <span class="file_remove3">X</span>
                  </div>
                </div>
                <div class="row mb-4">
                  <div class="col-6 mx-auto">
                    <div class="panel4">
                      <div class="button_outer4">
                        <div class="btn_upload4">
                          <input type="file" id="upload_file4" required accept=".jpg, .jpeg, .png" id="upload_file" name="image">
                          Team Logo <i class="ms-1 fa fa-upload"></i>
                        </div>
                        <div class="processing_bar4"></div>
                        <div class="success_box4"></div>
                      </div>
                    </div>
                    <div class="error_msg4"></div>
                    <div class="uploaded_file_view4" id="uploaded_view4">
                      <span class="file_remove4">X</span>
                    </div>
                    <div class="panel1">
                      <div class="button_outer1">
                        <div class="btn_upload1">
                          <input type="file" id="upload_file1" required accept=".jpg, .jpeg, .png" id="upload_background" name="teamImage">
                          Team Background <i class="ms-1 fa fa-upload"></i>
                        </div>
                        <div class="processing_bar1"></div>
                        <div class="success_box1"></div>
                      </div>
                    </div>
                    <div class="error_msg1"></div>
                    <div class="uploaded_file_view1" id="uploaded_view1">
                      <span class="file_remove1">X</span>
                    </div>


                  </div>
                </div>
                <div class="text-center">
                  <button type="submit" class="btn btn-primary btn-block enter-btn">Create</button>
                </div>
              </form>
            </div>
          </div>
          <div class="row p-5 bg-white mt-4">
            <% for (let team of teams){ %>
            <div class="col-3">
              <div class="card">
                <img class="card-img-top" src="<%= team.image.path %>" width="100%" height="auto" alt="Card image cap">
                <div class="card-body">
                  <h5 class="card-title text-center mb-4"><%= team.name %></h5>
                  <div class="row">
                    <div style="width: 50%; text-align: center;">
                      <a href="/admin/team/<%= team._id %>/edit" class="btn btn-primary" style="width: 90%;"><i class="fa fa-edit" style="font-size: 20px;"></i></a>
                    </div>
                    <form action="/admin/team/<%= team._id %>/delete?_method=DELETE" method="post" style="width: 50%; text-align: center;">
                      <button type="submit" class="btn btn-danger" style="width: 90%;"><i class="fa fa-trash" style="font-size: 20px;"></i></button>
                    </form>
                  </div>
                </div>
              </div>
            </div>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include('../adminpartials/footer') %>
