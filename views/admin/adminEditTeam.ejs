<%- include('../adminpartials/head', {title: "Admin || Teams"}) %>
<div class="loading-overlay">
  <div class="loading-spinner"></div>
</div>
<div class="content-wrapper">
  <%- include('../flash') %>
  <div class="container-scroller">
    <div class="container-fluid">
      <div class="row">
        <div class="content-wrapper full-page-wrapper auth-pages">
          <div class="card col-lg-7 mx-auto">
            <div class="card-body px-5 py-5">
              <h3 class="card-title text-left mb-3">Edit <%= team.name %></h3>
              <form action="/admin/team/<%= team._id %>?_method=PATCH" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                  <label class="form-text text-muted">
                    Team name
                  </label>
                  <input value="<%= team.name %>" required type="text" class="form-control p_input" name="name">
                </div>
                <div class="form-group">
                  <div class="panel mx-auto">
                    <div class="button_outer">
                      <div class="btn_upload">
                        <input accept="audio/mpeg, audio/mp3" type="file" name="audio">
                        Audio <i class="ms-1 fa fa-upload"></i>
                      </div>
                      <div class="processing_bar"></div>
                      <div class="success_box"></div>
                    </div>
                  </div>
                </div>
                <div class="row mb-4">
                  <div class="col-6 mx-auto">
                    <div class="panel">
                      <div class="button_outer">
                        <div class="btn_upload">
                          <input accept=".jpg, .jpeg, .png" type="file" id="upload_file" name="image">
                          Team Logo <i class="ms-1 fa fa-upload"></i>
                        </div>
                        <div class="processing_bar"></div>
                        <div class="success_box"></div>
                      </div>
                    </div>
                    <div class="panel">
                      <div class="button_outer">
                        <div class="btn_upload">
                          <input accept=".jpg, .jpeg, .png" type="file" id="upload_background" name="teamImage">
                          Team Background <i class="ms-1 fa fa-upload"></i>
                        </div>
                        <div class="processing_bar"></div>
                        <div class="success_box"></div>
                      </div>
                    </div>
                    <div class="error_msg"></div>
                    <div class="uploaded_file_view" id="uploaded_view">
                      <span class="file_remove">X</span>
                    </div>
                  </div>
                </div>
                <div class="text-center">
                  <button type="submit" class="btn btn-primary btn-block enter-btn">Edit</button>
                </div>
              </form>
            </div>
          </div>
          <div class="row p-5 mt-4 d-flex justify-content-center">
            <div class="col-lg-3 col-md-4 col-sm-12">
              <div class="card borderblack">
                <% if (team.audio.path){ %>
                <audio controls>
                  <source src="<%= team.audio.path %>" type="<%= team.audio.contentType %>">
                </audio>
                <% }else{ %>
                <p class="text-center my-0">No audio uploded</p>
                <% } %>
                <h5 class="btn-primary p-2 text-center mt-3">Current Audio</h5>
              </div>
            </div>
            <div class="col-lg-3 col-md-4 col-sm-12">
              <div class="card borderblack">
                <img class="card-img-top" src="<%= team.image.path %>" width="100%" height="auto" alt="Card image cap">
                <h5 class="btn-primary p-2 text-center mt-3">Current Logo</h5>
              </div>
            </div>
            <div class="col-lg-3 col-md-4 col-sm-12">
              <div class="card borderblack">
                <% if(team.teamImage.path){ %>
                <img class="card-img-top" src="<%= team.teamImage.path %>" width="100%" height="auto" alt="Card image cap">
                <% }else{ %>
                <p class="text-center my-0">No Image uploaded</p>
                <% } %>
                <h5 class="btn-primary p-2 text-center mt-3">Current Background</h5>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
<%- include('../adminpartials/footer') %>
